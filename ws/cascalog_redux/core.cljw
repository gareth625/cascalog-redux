(def bike-trip-data-full
  "data/bike_trip_data.csv")
;; @@
;; =>
;;; {"type":"html","content":"<span class='clj-var'>#&#x27;cascalog-redux.core/bike-trip-data-full</span>","value":"#'cascalog-redux.core/bike-trip-data-full"}
